@model CadastroViagens.Models.Viagem
<form name="formMotorista" method="get" id="formMotorista">
    <div class="form-row">
        <div class="col-auto">
            Buscar Motorista
            </div>
            <div class="col-auto">
                <div class="form-group col-md-12">
                    <input type="text" class="form-control" id="Nome" placeholder="Buscar Motorista">
                </div>

            </div>
            <div class="col-auto">
                <a class="btn btn-primary form-control" id="LocalizarViagem" href="#" onclick="BuscarMotorista()">Localizar</a>
</div>
        </div>
</form>
<hr class="my-4">
<div class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Motorista</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Motoristas.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@Html.Raw(ViewBag.Mensagem)

<form method="post" asp-action="CadastrarViagem" onsubmit="return checkForm(this);">
    <input type="hidden" class="IdMotorista" id="IdMotorista" asp-for="IdMotorista" />
    <div style="padding-bottom:2%; padding-top:2%;">
        <div class="NomeMotorista"></div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputAddress">Data Hora</label>
            <input type="datetime" class="form-control" id="DataHoraViagem" placeholder="Data e Hora" asp-for="DataHoraViagem" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputAddress2">Local de entrega</label>
            <input type="text" class="form-control" id="LocalEntrega" placeholder="Local de entrega" maxlength="50" asp-for="LocalEntrega" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">Local de Saíada</label>
            <input type="text" class="form-control" id="LocalSaida" placeholder="Local de Saíada" maxlength="50" asp-for="LocalSaida" required>
        </div>
        <div class="form-group col-md-6">
            <label for="inputZip">Quilômetro entre cidades</label>
            <input type="text" class="form-control" id="TotalKmEntreCidade" asp-for="TotalKmEntreCidade" maxlength="5" placeholder="Quilômetro entre cidades" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Gravar</button>
</form>




